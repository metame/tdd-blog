doctype html

html
    head
        title= "TDD Blog - " + title
        link(href="/stylesheets/bootstrap.css" rel="stylesheet")
        link(href="/stylesheets/userLayout.css" rel="stylesheet")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        block includes
    body
        nav.navbar.navbar-default
            .col-xs-12.col-lg-offset-3.col-lg-7
                .navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#user-navbar")
                        span.sr-only Toggle Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="../") tdd-blog
                #user-navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li: a(href="/users/dashboard") Dashboard
                        li: a(href="/users/newpost") New Post
                        li: a(href="/users/logout") Logout
        .container-fluid
            block content
    script(src="/javascripts/jquery.js" type="text/javascript")
    script(src="/javascripts/bootstrap.js" type="text/javascript")