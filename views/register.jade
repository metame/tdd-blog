extends usersLayout

block content
    .col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
        h1= title
        p.lead.text-warning #{errMsg}
        form(action="/users/register" method="POST")
            .form-group
                input.form-control(type="text" placeholder="username" name="username")
            .form-group
                input.form-control(type="password" placeholder="password" name="password")
            .form-group
                input.form-control(type="email" placeholder="email" name="email")
            button.btn.btn-primary.btn-lg.pull-right(type="submit") Register
        a(href="./login") Already registered? Click here to login!